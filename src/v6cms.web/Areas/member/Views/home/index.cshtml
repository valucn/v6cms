                        </div>
                    </div>*@
                    <div class="form-group row">
                        <label asp-for="real_name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" asp-for="real_name" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="company" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" asp-for="company" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="mobile" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" asp-for="mobile" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="reg_time" class="col-sm-2 col-form-label"></label>
