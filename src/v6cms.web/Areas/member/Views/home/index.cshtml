                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="reg_ip" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" asp-for="reg_ip" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2"></label>
                        <div class="col-sm-6">
                            <a href="/member/edit_info" class="btn btn-primary">修改</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
