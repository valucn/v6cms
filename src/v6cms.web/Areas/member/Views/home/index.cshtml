    ViewData["Title"] = "个人信息";
    ViewBag.menu_member_home = "active";
}
<div class="container">
    <div class="card-header  bg-primary text-white">
        @ViewData["Title"]
    </div>
    <p></p>
    <div class="row">
        <div class="col-3">
            <div class="nav flex-column nav-pills">
                @Html.Partial("_left_menu")
            </div>
        </div>
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">
                <form>
                    <div class="form-group row">
                        <label asp-for="username" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" asp-for="username" />
                        </div>
                    </div>
                    @*<div class="form-group row">
                        <label asp-for="nick_name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
