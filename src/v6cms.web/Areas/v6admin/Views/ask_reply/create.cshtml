@model ask_reply_entity
@{
    ViewData["Title"] = "答疑";
}
<div class="layui-card">
    <div class="layui-card-header">@ViewData["Title"]</div>
    <div class="layui-card-body" style="padding: 15px;">
        <form asp-action="create" class="layui-form">
            <input type="hidden" asp-for="ask_id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <label class="layui-form-label">提问标题</label>
                    <div class="layui-input-block">
                        <div style="padding-top: 7px;">@ViewData["ask_title"]</div>
                    </div>
                </div>
            </div>

            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <label asp-for="content" class="layui-form-label">答疑内容</label>
                    <div class="layui-input-block">
                        <textarea asp-for="content" class="layui-textarea" lay-verify="required"></textarea>
                        <span asp-validation-for="content" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="layui-form-item layui-layout-admin">
                <div class="layui-input-block">
                    <div class="layui-footer" style="left: 0;">
                        <button class="layui-btn" lay-submit="" lay-filter="component-form-demo1">提交答疑</button>
                        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
