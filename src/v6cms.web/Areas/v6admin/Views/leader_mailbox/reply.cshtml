@model leader_mailbox_entity
@{
    ViewData["Title"] = "修改领导信箱";
}
<div class="layui-card">
    <div class="layui-card-header">@ViewData["Title"]</div>
    <div class="layui-card-body" style="padding: 15px;">
        <form asp-action="reply" class="layui-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />


            <div class="layui-form-item">
                <div class="layui-inline">
                    <label asp-for="guest_name" class="layui-form-label">留言人姓名</label>
                    <div class="layui-input-inline">
                        <input asp-for="guest_name" class="layui-input" readonly="readonly" />
                        <span asp-validation-for="guest_name" class="text-danger"></span>
                    </div>
                </div>
                <div class="layui-inline">
                    <label asp-for="guest_unit" class="layui-form-label">留言人单位</label>
                    <div class="layui-input-inline">
                        <input asp-for="guest_unit" class="layui-input" readonly="readonly" />
                        <span asp-validation-for="guest_unit" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label asp-for="guest_email" class="layui-form-label">邮箱</label>
                    <div class="layui-input-inline">
                        <input asp-for="guest_email" class="layui-input" readonly="readonly" />
                        <span asp-validation-for="guest_email" class="text-danger"></span>
                    </div>
                </div>
                <div class="layui-inline">
                    <label asp-for="guest_mobile" class="layui-form-label">手机号码</label>
                    <div class="layui-input-inline">
                        <input asp-for="guest_mobile" class="layui-input" readonly="readonly" />
                        <span asp-validation-for="guest_mobile" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <label asp-for="title" class="layui-form-label">标题</label>
                    <div class="layui-input-block">
                        <input asp-for="title" class="layui-input" readonly="readonly" />
                        <span asp-validation-for="title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label asp-for="mail_type" class="layui-form-label">信件类型</label>
                    <div class="layui-input-inline">
                        <input asp-for="mail_type" class="layui-input" readonly="readonly" />
                        <span asp-validation-for="mail_type" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label asp-for="reply_type" class="layui-form-label">回复方式</label>
                    <div class="layui-input-inline">
                        <input asp-for="reply_type" class="layui-input" readonly="readonly" />
                        <span asp-validation-for="reply_type" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <label asp-for="content" class="layui-form-label">信件内容</label>
                    <div class="layui-input-block">
                        <textarea asp-for="content" style="height: 120px;" class="layui-textarea" readonly="readonly"></textarea>
                        <span asp-validation-for="content" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label asp-for="create_time" class="layui-form-label"></label>
                    <div class="layui-input-inline">
                        <input asp-for="create_time" class="layui-input" readonly="readonly" />
                        <span asp-validation-for="create_time" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <label asp-for="reply_content" class="layui-form-label">
                        <span style="color: red;">*</span>
                        回复内容
                    </label>
                    <div class="layui-input-block">
                        <textarea asp-for="reply_content" style="height: 120px;" class="layui-textarea"></textarea>
                        <span asp-validation-for="reply_content" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item layui-layout-admin">
                <div class="layui-input-block">
                    <div class="layui-footer" style="left: 0;">
                        <button class="layui-btn" lay-submit="" lay-filter="component-form-demo1">回复邮件</button>
                        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
