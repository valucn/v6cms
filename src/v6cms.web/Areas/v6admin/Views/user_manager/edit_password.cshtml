@model user_entity
@{
    ViewData["Title"] = "改密码";
}
<div class="layui-card">
    <div class="layui-card-header">@ViewData["Title"]</div>
    <div class="layui-card-body" style="padding: 15px;">
        <form asp-action="edit_password" class="layui-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />

            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <label class="layui-form-label">用户名</label>
                    <div class="layui-input-block">
                        <input asp-for="username" lay-verify="required" class="layui-input" readonly="readonly">
                    </div>
                </div>
            </div>

            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <label class="layui-form-label">新密码</label>
                    <div class="layui-input-block">
                        <input asp-for="password" lay-verify="required" class="layui-input">
                    </div>
                </div>
            </div>

            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <label class="layui-form-label">选项</label>
                    <div class="layui-input-block">
                        <input asp-for="is_need_edit_password" title="下次登录改密码">
                    </div>
                </div>
            </div>

            <div class="layui-form-item layui-layout-admin">
                <div class="layui-input-block">
                    <div class="layui-footer" style="left: 0;">
                        <button class="layui-btn" lay-submit="" lay-filter="component-form-demo1">保存</button>
                        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
